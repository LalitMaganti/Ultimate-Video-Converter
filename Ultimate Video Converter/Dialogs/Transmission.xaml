<Window x:Class="Transmission"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Transmitting" Height="128" Width="447" WindowStartupLocation="CenterOwner" WindowStyle="None" ResizeMode="CanMinimize">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="5" HorizontalAlignment="Stretch" Margin="0,0,0,0" Name="Border2" VerticalAlignment="Stretch" />
        <ProgressBar Margin="20,0,23,17" Name="ProgressBar1" IsIndeterminate="True" Height="30" VerticalAlignment="Bottom" />
         <WebBrowser Height="0" HorizontalAlignment="Left" Margin="12,12,0,0" Name="WebBrowser1" VerticalAlignment="Top" Width="0" Visibility="Hidden" />
        <Border Background="Black" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Stretch" Margin="0,0,0,0" Name="Border1" VerticalAlignment="Top">
            <Image Height="20" HorizontalAlignment="Left" Margin="5,5,5,5" Name="Image1" Source="/Images/UltimateVideoConverter.ico" VerticalAlignment="Top" Width="20" />
        </Border>
        <Label Content="Transmitting Information. This should take no longer than a minute" FontFamily="Segoe UI" FontSize="10" FontWeight="Bold" Foreground="#FFFF8B00" Height="28" HorizontalAlignment="Left" Margin="28,4,0,0" Name="Label2" VerticalAlignment="Top" />
    </Grid>
</Window>
